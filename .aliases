take () {
	mkdir -p $@ && cd ${@:$#}
}

ssh-ip () {
	ssh -G "$1" | head -2
}

# epoch stuff
from-unixtime () {
    in="$1"
    gdate --date="@${in:0:10}"
}

alias unixtime='date +%s'

date-range () {
  current="$1"
  stop="$2"
  until [[ $current > $stop ]]; do
    echo "$current"
    current=$(gdate -I -d "$current + 1 day")
  done
}

export HISTTIMEFORMAT="%F %T "


