#dot files git config
# https://www.atlassian.com/git/tutorials/dotfiles
alias dotgit='/usr/bin/git --git-dir=$HOME/.cfg/ --work-tree=$HOME'

dotgit_init() {
	cd "$HOME"
	touch .gitignore
	echo '.cfg' >> .gitignore
	git init --bare "$HOME/.cfg"
	alias dotgit='/usr/bin/git --git-dir=$HOME/.cfg/ --work-tree=$HOME'
	dotgit config --local status.showUntrackedFiles no
}
